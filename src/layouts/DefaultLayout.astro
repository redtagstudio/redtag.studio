---
import '../assets/css/2018.css'
import '../assets/css/2018.css'
import '../assets/css/2018resp.css'

const {
  title = '',
  description = 'We are a group of idea makers who enjoy making the most challenging apps in the universe, and beyond.',
  url,
  image = '/img/img/ogredtag.jpg',
  subtitle = 'RedTag - app / web development studio',
  bodyId = "home",
} = Astro.props

const finalTitle = title === '' ? subtitle : `${title} - ${subtitle}`

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="generator" content={Astro.generator} />
    
    <!-- general meta -->
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="RedTag" />

    <!-- open graph -->
    <meta property="og:title" content={finalTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
		<meta property="og:type" content="website">
    <meta property="og:site_name" content="RedTag">
    <meta property="og:url" content={url} />
    <meta property="og:image" content={Astro.site ? `${Astro.site}${image}` : image} />

    <script is:inline src="/vendor/jquery-3.3.1.min.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#FC3C2D">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <meta name="author" content="RedTag">

    <meta name="robots" content="index, follow">
    <title>{finalTitle}</title>
  </head>

  <body id={`body_${bodyId}`}>
    <header>
      <div id="topwrap" class="wrap">
        <a href="/" id="logo">
          <img alt="RedTag app studio" src="/img/logo.svg" />
        </a>
        <nav>
          <div id="hamcont">
            <button class="c-hamburger c-hamburger--htx">
              <span>toggle menu</span>
            </button>
          </div>
        </nav>
      </div>
      <div id="menucont">
        <ul id="menu" class="wrap">
          <li><a href="#">Home</a></li>
          <li><a href="#standout">Why us</a></li>
          <li><a href="#projects">Projects</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
      </div>
    </header>
    <main>
      <div id="allbuthead">
        <slot />
      </div>
    </main>
    <script is:inline src="/vendor/anime.min.js"></script>
    <script is:inline src="/vendor/scrollreveal.min.js"></script>
    <script src="../assets/js/decolines.js"></script>
    <script src="../assets/js/2018.js"></script>
  </body>
</html>
